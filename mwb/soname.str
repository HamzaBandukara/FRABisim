functor SortName() : SoNAME =
struct
    (* name, sortname *)
    datatype name = Name of string * string

    fun mkname (s) = Name(s,"")
    fun mksortedname (n,s) = Name(n,s)
    fun mkstr(Name(n,s)) = n
    fun mkstr_sorted(Name(n,s)) = n^(if size s > 0 then ":"^s else "")

    fun eq(Name(s,_), Name(t,_)) = s = t
    fun le(Name(s,_), Name(t,_)) = s <= t
end
